/**index.wxss**/
.bleSearch {
    width: 98%;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 10rpx;
}

.bleSearch_button {
    width: 100%;
    background-color: white;
}

.bleIconImage {
    width: 30rpx;
    height: 30rpx;
}

.bleState {
    width: 100%;
    background-color: white;
    display: flex;
    flex-direction: row;
    height: 80rpx;
    justify-content: left;
    align-items: center;
    /* border-bottom: 4rpx groove gray; */
    margin-bottom:10rpx; 
}

.bleState_text {
    padding: 10rpx;
    font-size: 24rpx;
}

.bleState_disconnect {
    color: red;
    text-decoration: underline;
    font-size: 24rpx;
    padding-left: 20rpx;
}

.iconView {
    display: flex;
    flex-direction: row;
    background-color: white;
}

.icon {
    width: 250rpx;
    height: 200rpx;
    border-top: 1rpx outset lightgray; 
    border-bottom: 1rpx outset gray; 
    border-right: 1rpx outset lightgray; 
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.iconImage {
    width: 100rpx;
    height: 100rpx;
}

.iconText {
    padding-top: 10rpx;
    font-size: 24rpx;
}

.history_title {
    margin-top: 10rpx;
    width: 100%;
    height: 60rpx;
    background-color: white;
    display: flex;
    flex-direction: row;
    justify-content: left;
    align-items: center;
    border-bottom: 1rpx groove lightgray;
    /* padding-left: 10rpx; */
}

.history_label {
     padding: 10rpx; 
    font-size: 24rpx;
}

.history_view {
    display: flex;
    flex-direction: column;
    background-color: white;
    width: 100%;
    min-height: 100rpx;
}

.history_tip_text {
    font-size: 24rpx;
    padding: 10rpx;
    color: lightgray;
}

page {  
  display: block;  
  min-height: 100%;  
  background-color: #E8E8E8;
}
