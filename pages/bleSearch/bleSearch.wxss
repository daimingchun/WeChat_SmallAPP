.deviceListContainer {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding-top: 20rpx;
    box-sizing: border-box;
}

.deviceListView {
    width: 98%; 
    margin-top: 10rpx;
    margin-bottom: 150rpx;
    display: flex;
    flex-direction: column;
    justify-content: left;
    align-items: center;
}

.deviceListLabel {
    width: 100%;
    height: 80rpx;
    display: flex;
    flex-direction: row;
    justify-content: left;
    align-items: center;
    padding-left: 40rpx;
    background-color: white;
    margin-top: 10rpx;
}

.head_tips {
    font-size: 24rpx;
}

.backView {
    width: 100%;
    height: 100rpx;
    background-color: red;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color: white;
    position: fixed;
    bottom: 0;
    /* border-top: 1rpx groove gray; */
}


page {  
  display: block;  
  min-height: 100%;  
  background-color: #E8E8E8;
}



