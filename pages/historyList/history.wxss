/**index.wxss**/

.MainContainer {
    width: 100%;
    /* background-color: white; */
    display: flex;
    flex-direction: column;
    align-content: center;
    align-items: center;
    margin-bottom: 150rpx;
}


.history_title {
    width: 100%;
    height: 70rpx;
    background-color: white;
    display: flex;
    flex-direction: row;
    justify-content: left;
    align-items: center;
    border-bottom: 1rpx groove lightgray;
    position: fixed;
    top: 0rpx;
}

.history_label {
    padding: 10rpx; 
    font-size: 24rpx;
}

.history_label_del {
    font-size: 24rpx;
    position: fixed;
    right: 20rpx;
    color: red;
}

.history_view {
    display: flex;
    flex-direction: column;
    background-color: white;
    width: 100%;
    min-height: 100rpx;
    align-content: center;
    align-items: center;
    margin-bottom: 120rpx;
    margin-top: 80rpx;
    /* margin-top: 5rpx;
    border-bottom: 1rpx groove lightgray;  */
}

.history_tip_text {
    font-size: 24rpx;
    padding: 10rpx;
    color: lightgray;
}

page {  
  display: block;  
  min-height: 100%;  
  background-color: #E8E8E8;
}

.history_list_view {
    display: flex;
    flex-direction: column;
    background-color: #F0F8FF;
    width: 98%;
    margin-bottom: 10rpx;
    margin-top: 10rpx;
    border: 1rpx groove gray;
    border-radius: 10rpx;
}

.history_list_label {
    font-size: 24rpx;
    padding-left: 10rpx;
    /* color: lightgray; */
}

.history_list_label_del {
    font-size: 24rpx;
    padding-left: 10rpx;
    color: red;
    width: 100rpx;
}

.history_more_label {
    font-size: 24rpx;
    color: blue;
    text-decoration: underline;
    margin-bottom: 20rpx;
    margin-top: 10rpx;
}

.backView {
    width: 100%;
    height: 100rpx;
    background-color: red;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color: white;
    position: fixed;
    bottom: 0;
    /* border-top: 1rpx groove gray; */
}

